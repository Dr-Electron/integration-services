{
	"compilerOptions": {
		"target": "es5",
		"noImplicitAny": true,
		"lib": ["dom", "es2015", "es2015.iterable"],
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"typeRoots": ["node_modules/@types", "types"],
		"outDir": "dist",
		"resolveJsonModule": true,
		"allowJs": true,
	},
	"include": ["src"],
	"exclude": ["node_modules", "../shared-modules/node_modules", "**/integration-services/integration-services/api/shared-modules/node_modules"],
}
