{
  "include": ["src/**/*", "src/tests"],
  "exclude": ["examples/", "node_modules"],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": false,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
